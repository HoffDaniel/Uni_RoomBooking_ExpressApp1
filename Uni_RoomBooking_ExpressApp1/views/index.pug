extends layout

block content
  h1= title  
  p Welcome to a room booking web application - Daniel Hoffman | CTEC3451 Final Year Project | De Montfort University |
  
  .topnav
    .dropdown
        button.dropbtn
            | Home
            i.fa.fa-caret-down
        .dropdown-content
            a(href='/') Home
            a(href='#contact') Contact
            a(href='#about') About
    if login
        a(href='/room_List') Rooms
        a(href='/search_Results') Search
        a(href='/booking') Booking
        a(href='/my_Bookings') My Bookings
        a(href='/logout', onclick="return confirm('You are about to logout')") Logout
    else
        a(href='/login') Login
        a(href='/register') Register